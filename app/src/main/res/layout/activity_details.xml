<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/railway" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:paddingRight="10dp"
        android:paddingBottom="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.sn.railway.custom.SnTextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="KWD 99"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                android:textStyle="bold" />


        </RelativeLayout>

        <com.sn.railway.custom.SnTextView
            android:id="@+id/tvName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="London Victoria(12834)"
            android:textColor="@color/textColor"
            android:textSize="17dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.sn.railway.custom.SnTextView
                    android:id="@+id/tvToTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13:55"
                    android:textColor="@color/textColor"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <com.sn.railway.custom.SnTextView
                    android:id="@+id/tvTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvName"
                    android:text="London West"
                    android:textColor="@color/textColor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/linFrom"
                android:layout_toRightOf="@+id/linTo"
                android:orientation="vertical">

                <com.sn.railway.custom.SnTextView
                    android:id="@+id/tvDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="37 h 30 m"
                    android:textColor="@color/textHintColor"
                    android:textSize="11dp" />

                <RelativeLayout
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp">

                    <com.sn.railway.custom.SnTextView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/circle" />

                    <View
                        android:layout_width="63dp"
                        android:layout_height="1dp"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:background="@color/textHintColor"></View>

                    <com.sn.railway.custom.SnTextView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_centerVertical="true"

                        android:background="@drawable/circle" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <com.sn.railway.custom.SnTextView
                    android:id="@+id/tvFromTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="23:55"
                    android:textColor="@color/textColor"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <com.sn.railway.custom.SnTextView
                    android:id="@+id/tvFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvName"
                    android:layout_gravity="right"
                    android:text="London East"
                    android:textColor="@color/textColor" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linBookTicket"
            android:layout_width="230dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/round_background"
            android:orientation="horizontal">

            <com.sn.railway.custom.SnTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Book Now"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:background="@color/divider"></View>
</LinearLayout>